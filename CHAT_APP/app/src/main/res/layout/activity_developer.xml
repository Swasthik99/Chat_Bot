<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Developer 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewDeveloper1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/s1"
                    android:scaleType="centerCrop"

                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp">

                    <TextView
                        android:id="@+id/textViewDeveloper1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Thrisha" />

                    <TextView
                        android:id="@+id/textViewDeveloper1Mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6th AIML" />

                    <TextView
                        android:id="@+id/textViewDeveloper1Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: Thrishahegde21@gmail.com" />

                    <TextView
                        android:id="@+id/textViewDeveloper1Organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile: +8310443002" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginVertical="16dp" />

            <!-- Developer 2 (similar layout as Developer 1) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewDeveloper2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/s2"
                    android:scaleType="centerCrop"

                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp">

                    <TextView
                        android:id="@+id/textViewDeveloper2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Swasthik" />

                    <TextView
                        android:id="@+id/textViewDeveloper2Mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6th AIML" />

                    <TextView
                        android:id="@+id/textViewDeveloper2Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: Swasthikkulal99@gmail.com" />

                    <TextView
                        android:id="@+id/textViewDeveloper2Organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile: 9902422329" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>